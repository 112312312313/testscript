-- Tool Activation Logic
tool.Activated:Connect(function()
    -- Make the player say the phrase using TextChatService
    sendChatMessage("Reversal Red!")

    -- Play the specified animation
    playAnimation(54584713, 1, 1, 3) -- Animation ID, fadeTime, speed, duration
end)
